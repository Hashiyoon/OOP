<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--параметры для всех сервлетов-->
    <!--БД-->
    <context-param>
        <param-name>jdbcUrl</param-name>
        <param-value>jdbc:postgresql://localhost:5432/user_db</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcUser</param-name>
        <param-value>postgres</param-value>
    </context-param>
    <context-param>
        <param-name>jdbcPassword</param-name>
        <param-value>1234</param-value>
    </context-param>
<!--    Po prikolu-->
    <context-param>
        <param-name>message</param-name>
        <param-value>Hello Servlets</param-value>
    </context-param>


    <servlet>
        <servlet-name>HelloWorld</servlet-name>
        <servlet-class>org.example.server.servlets.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HelloWorld</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <!--WelcomeScreen не нужен больше-->
    <servlet>
        <servlet-name>NameFormServlet</servlet-name>
        <servlet-class>org.example.server.servlets.NameFormServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NameFormServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>org.example.server.servlets.LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RestorePassServlet</servlet-name>
        <servlet-class>org.example.server.servlets.RestorePassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RestorePassServlet</servlet-name>
        <url-pattern>/restore</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>OrderServlet</servlet-name>
        <servlet-class>org.example.server.servlets.OrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderServlet</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>


